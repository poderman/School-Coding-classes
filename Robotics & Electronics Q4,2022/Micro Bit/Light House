from microbit import *

import music
 
tune = ["C4:12"]
 
while True:
    x = pin2.read_analog()
    print("value " + str(x))
    if x>1010:
        pin16.write_digital(1)
        sleep(1000)
        pin16.write_digital(0) 
        sleep(2000)
    elif button_a.is_pressed():
        music.play(tune)
        print("Hi")
        sleep(1000)
    sleep(1000)
        
        
        
