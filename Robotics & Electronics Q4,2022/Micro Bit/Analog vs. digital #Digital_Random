# This makes an RGB LED turn on and off randomly.
from microbit import *
import random

while True:
    if button_a.is_pressed():

        pin8.write_digital(random.randint(0, 1))
        pin12.write_digital(random.randint(0, 1))
        pin16.write_digital(random.randint(0, 1))
    
        sleep(500)
    
