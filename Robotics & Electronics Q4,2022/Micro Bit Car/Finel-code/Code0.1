from microbit import *
from motobit import MotoBit 
import radio

moto = MotoBit() 
moto.enable()

radio.on()

while True:
    incoming = radio.receive()
    if incoming == 'super':
        display.show("S")
        moto.drive(speed_left = 100, speed_right = 100) 
        
    if incoming == 'left':
        display.show("L")
        moto.drive(speed_left = 20, speed_right = 40) 
        
    if incoming == 'right':
        display.show("R")
        moto.drive(speed_left = 40, speed_right = 20) 
        
    if incoming == 'up':
        display.show("U")
        moto.drive(speed_left = 500, speed_right = 50) 
        
    if incoming == 'down':
        display.show("D")
        moto.drive(speed_left = -30, speed_right = -30)
    else
        moto.drive(speed_left = 0, speed_right = 0) 
        
        
